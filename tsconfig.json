{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["node", "vite/client", "vitest/globals", "element-plus/global"]
  },
  "include": [
    "packages/**/**/*",
    "packages/**/*",
    "src/*.ts",
    "src/*.tsx",
    "src/*.vue",
    "vite.config.ts",
    "__tests__/*",
    "volar.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
